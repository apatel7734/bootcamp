<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="@string/enter_amount"
        android:inputType="number"
        android:paddingTop="1dp" />

    <Button
        android:id="@+id/btnTenPerc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnTwentyPerc"
        android:layout_toLeftOf="@id/btnTwentyPerc"
        android:onClick="calculateTip"
        android:text="@string/_10_" />

    <Button
        android:id="@id/btnTwentyPerc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="calculateTip"
        android:text="@string/_20_" />

    <Button
        android:id="@+id/btnThirtyPerc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnTwentyPerc"
        android:layout_toRightOf="@id/btnTwentyPerc"
        android:onClick="calculateTip"
        android:text="@string/_30_" />

    <TextView
        android:id="@+id/tvResultDisp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

</RelativeLayout>